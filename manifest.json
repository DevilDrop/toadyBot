{
  "manifest_version": 2,

  "name": "ToadyBot",
  "description": "Your toady friend",
  "version": "1.0",
  "options_page": "options.html",

  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://ajax.googleapis.com/"
  ]
}